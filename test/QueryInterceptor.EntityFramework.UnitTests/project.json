{
    "version": "1.0.0-*",
    "title": "QueryInterceptor.EntityFramework.UnitTests",
    "authors": [ "Stef Heyenrath" ],

    "dependencies": {
        "Microsoft.NETCore.App": {
            "type": "platform",
            "version": "1.0.1"
        },
        "QueryInterceptor.EntityFramework": { "target": "project" },

        "Microsoft.EntityFrameworkCore": "1.1.0",
        "Microsoft.EntityFrameworkCore.Sqlite": "1.1.0",

        "dotnet-test-xunit": "2.2.0-preview2-build1029",
        "xunit": "2.2.0-beta2-build3300"
    },

    "buildOptions": {
        "define": [ "EF" ],
        "compile": {
            "include": [
                "../QueryInterceptor.Core.UnitTests/*.cs",
                "../QueryInterceptor.Core.UnitTests/*/*.cs",
                "../QueryInterceptor.Core.UnitTests/*/*/*.cs"
            ],
            "exclude": [
                "../QueryInterceptor.Core.UnitTests/*/AssemblyInfo.cs"
            ]
        }
    },

    "testRunner": "xunit",

    "frameworks": {
        "netcoreapp1.5": {
            "buildOptions": { "define": [ "NETSTANDARD" ] },
            "imports": [
                "dotnet5.5",
                "portable-win81+wp81",
                "portable-net45+wp8",
                "portable-net45+win8+wp8",
                "portable-wp81+wpa81",
                "portable-win81+wp81+wpa81",
                "portable-net45+win8+wpa81+wp8",
                "portable-net45+win8",
                "portable-net45+win8+wpa81",
                "portable-win81+wpa81",
                "portable-net451+win81",
                "portable-net451+win81+wpa81"
            ],
            "dependencies": {
                "System.Linq.Queryable": "4.3.0"
            }
        }
    }
}